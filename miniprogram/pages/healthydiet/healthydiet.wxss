/* index.wxss */

.container {
  width: 100%;
  height: 87vh;
  position: relative;
  overflow: hidden;
}

.full-width {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.record-button {
  border: 3rpx solid black;
  border-radius: 50rpx;
  background-color: #f4e3ad;
  padding: 10px 10px;
  font-size: 60rpx;
  color: #bfa48c;
  font-weight: 800;
}
